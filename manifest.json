{
  "manifest_version": 3,
  "name": "Followers & Following Manager",
  "version": "1.0",
  "description": "Lists users you're following and followers, with ability to unfollow users",
  "permissions": [
    "storage",
    "cookies",
    "tabs"
  ],
  "host_permissions": [
    "https://*.duolingo.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.duolingo.com/profile/*"],
      "js": ["content-script-profile.js"],
      "run_at": "document_end"
    }
  ]
} 